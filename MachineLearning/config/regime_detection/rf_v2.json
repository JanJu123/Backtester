{
  "regime_detection_rf_v2": {
    "model_info": {
      "model_name": "regime_detection_rf",
      "version": "v2.0",
      "description": "RF model using ADX/MA labels and a reduced feature set (ATR, MA)."
    },
    
    "feature_params": {
      "adx_params": { 
        "is_active": false, 
        "period": 24
      },
      "atr_params": { 
        "is_active": true, 
        "atr_period": 10 
      },
      "rsi_params": { 
        "is_active": false, 
        "period": 14 
      },
      "ma_params": { 
        "is_active": true, 
        "ma_func": "ema", 
        "period": 100
      }
    },
    
    "labeling_params": {
      "function_name": "label_adx_ma_regime",
      
      "required_features": { 
        "adx_params": { "is_active": true, "period": 14 },
        "ma_params": { "period": 200, "is_active": true, "ma_func": "ema" }
      },
      
      "func_params": {
        "adx_threshold": 25,
        "price_column": "Close"
      }
    },

    "training_params": {
      "model_type": "xgboost_classifier", 
      "split_params": {
        "test_size": 0.2,
        "shuffle": false
      },
      
      "hyperparameters": {
        "random_forest_classifier": { 
          "n_estimators": 100,
          "max_depth": 10,
          "min_samples_leaf": 5,
          "n_jobs": -1,
          "random_state": 42,
          "class_weight": "balanced",
          "criterion": "gini"
        },
        "xgboost_classifier": {
          "n_estimators": 100,
          "max_depth": 10,
          "min_samples_leaf": 5,
          "n_jobs": -1,
          "random_state": 42,
          "class_weight": "balanced"
        }
      }
    },
    
     "trading_cost_params": {
         "fees": 0.001,
         "slippage": 0.0005
     }
  }
}

