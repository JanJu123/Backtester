      "split_params": {
        "test_size": 0.2,
        "shuffle": false  
      },
      "hyperparameters": {
        "n_estimators": 100,
        "max_depth": 10,
        "min_samples_leaf": 5,
        "n_jobs": -1,
        "random_state": 42,
        "class_weight": "balanced"
      }
    }
  }
}

