{
  "regime_detection_rf_v1": {
    "model_info": {
      "model_name": "regime_detection_rf",
      "version": "v1.0",
      "description": "Initial Random Forest model for 3-state regime detection (Bullish, Bearish, Choppy)."
    },

    "feature_params": {
      "adx_params": {
        "is_active": false,
        "period": 24
      },
      "atr_params": {
        "is_active": true,
        "atr_period": 10
      },
      "rsi_params": {
        "is_active": false,
        "period": 14
      },
      "bb_params": {
        "is_active": false,
        "period": 20,
        "std_dev_mult": 2.0 
      },
      "ma_params": {
        "is_active": true,
        "ma_func": "ema",
        "period": 100 
      }
    },

    "labeling_params": {
      "required_features": { 
